@model CoreShop.Models.Product

@{
    ViewData["Title"] = "Delete product";
}

<h3>Are you sure you want to delete this product?</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="ProductID" />
        <!--PRODUCT #-->
        <dt>@Html.DisplayNameFor(model => model.ProductNumber)</dt>
        <dd>@Html.DisplayFor(model => model.ProductNumber)</dd>
        <!--PRICE-->
        <dt>@Html.DisplayNameFor(model => model.Price)</dt>
        <dd>@Html.DisplayFor(model => model.Price)</dd>
        <!--ON SALE-->
        <dt>@Html.DisplayNameFor(model => model.OnSale)</dt>
        <dd>@Html.DisplayFor(model => model.OnSale)</dd>
        <!--NAME-->
        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
        <dd>@Html.DisplayFor(model => model.Name)</dd>
        <!--IMGURL 1-->
        <dt>@Html.DisplayNameFor(model => model.ImgURL1)</dt>
        <dd>@Html.DisplayFor(model => model.ImgURL1)</dd>
        <!--IMGURL 2-->
        <dt>@Html.DisplayNameFor(model => model.ImgURL2)</dt>
        <dd>@Html.DisplayFor(model => model.ImgURL2)</dd>
        <!--IMGURL 3-->
        <dt>@Html.DisplayNameFor(model => model.ImgURL3)</dt>
        <dd>@Html.DisplayFor(model => model.ImgURL3)</dd>
        <!--SHORT DESCRIPTION-->
        <dt>@Html.DisplayNameFor(model => model.DescriptionShort)</dt>
        <dd>@Html.DisplayFor(model => model.DescriptionShort)</dd>
        <!--LONG DESCRIPTION-->
        <dt>@Html.DisplayNameFor(model => model.DescriptionLong)</dt>
        <dd>@Html.DisplayFor(model => model.DescriptionLong)</dd>
    </dl>
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to index</a>
        </div>
    </form>
</div>
