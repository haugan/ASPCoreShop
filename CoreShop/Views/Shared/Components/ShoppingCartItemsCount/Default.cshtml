@model CoreShop.Models.ShoppingCartViewModel.CartTotalGroup

@if (Model.Cart.Items.Count > 0)
{
    <li>
        <a asp-controller="ShoppingCart" asp-action="Index">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.TotalProductsQuantity
            </span>
        </a>
    </li>

}